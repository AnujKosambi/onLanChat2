<Window xmlns:SEN_project_v2="clr-namespace:SEN_project_v2"  x:Class="SEN_project_v2.Remote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote" Height="600" Width="800" Closing="Window_Closing">
    <Grid Cursor="Cross" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"> 
        <ScrollViewer Name="Scroller" ScrollChanged="Scroller_ScrollChanged">
        <Image  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  x:Name="Screen" MouseMove="Screen_MouseMove" Stretch="None" MouseRightButtonDown="Screen_MouseRightButtonDown" MouseRightButtonUp="Screen_MouseRightButtonUp" MouseLeftButtonDown="Screen_MouseLeftButtonDown" MouseLeftButtonUp="Screen_MouseLeftButtonUp" />
        </ScrollViewer>
    </Grid>
</Window>
