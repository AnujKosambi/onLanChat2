<Window xmlns:SEN_project_v2="clr-namespace:SEN_project_v2"  x:Class="SEN_project_v2.Remote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote" Height="600" Width="800" ScrollViewer.VerticalScrollBarVisibility="Auto" WindowState="Maximized" WindowStyle="None" Closing="Window_Closing" >
    <Grid Cursor="Cross" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True"> 
        <ScrollViewer Name="Scroller" ScrollChanged="Scroller_ScrollChanged" VerticalScrollBarVisibility="Auto">
        <Image  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  x:Name="Screen" MouseMove="Screen_MouseMove" Stretch="None"  />
        </ScrollViewer>
        <Button Name="StartButton" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,38.392,0,0" Visibility="Hidden" Click="StartButton_Click"/>
        <Button Name="Exit"  Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0" Visibility="Hidden" Click="Exit_Click"/>
    </Grid>
</Window>
