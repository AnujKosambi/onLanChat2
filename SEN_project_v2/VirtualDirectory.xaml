<Window x:Class="SEN_project_v2.VirtualDirectory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VirtualDirectory" Height="112.048" Width="365.06">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="VirtualName" HorizontalAlignment="Stretch" Height="23" Margin="100,10,10,0" TextWrapping="Wrap" Text="virtual name" VerticalAlignment="Top" />
        <Button Grid.Row="1" Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0" Click="Button_Click"/>
        <Label Grid.Row="0"  Content="Virtual Name : " HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="100,10,0,0" Click="Button_Click_1" />
    </Grid>
</Window>
