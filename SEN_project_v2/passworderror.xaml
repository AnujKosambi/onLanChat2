<Window x:Class="SEN_project_v2.passworderror"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="passworderror" Height="100" Width="300">
    <Window.Background>
        <RadialGradientBrush RadiusX="1" RadiusY="0.75">
            <GradientStop Color="#FF4F4646" Offset="1"/>
            <GradientStop Color="White"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontWeight="Bold" Text="Please try putting a password or disable it" ScrollViewer.VerticalScrollBarVisibility="Visible"
          />
        <Button Grid.Row="1" Content="Ok" FontStyle="Normal" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Click="Button_Click"/>
    </Grid>
</Window>
