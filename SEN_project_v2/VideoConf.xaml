<Window x:Class="SEN_project_v2.VideoConf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideoConf" Height="500" Width="640">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF4F4646" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="185*"/>
            <RowDefinition Height="284*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10,10,400,10"  Width="200" HorizontalAlignment="Stretch">
            <Grid.Background>
                <ImageBrush ImageSource="Images/user-frame.png"/>
            </Grid.Background>
            <Image Name="server_img" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,10,26.418"  />
        </Grid>
        <StackPanel x:Name="_stack"  Orientation="Horizontal"   Margin="10,10,10,10" Grid.Row="1"   VerticalAlignment="Stretch" HorizontalAlignment="Center" Background="Transparent"  />
        <Label Content=": Status" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top"/>
        <Label Name="statusLabel" Content="Creating..." HorizontalAlignment="Right" Margin="0,30,10,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>



    </Grid>
</Window>
