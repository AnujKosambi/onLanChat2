<Window x:Class="SEN_project_v2.VideoConf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="VideoConf" Height="500" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="185*"/>
            <RowDefinition Height="284*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10,10,400,10" Background="Black" >
            <Image Name="server_img" HorizontalAlignment="Left" Height="145" VerticalAlignment="Top" Width="200" Margin="10,10,0,0"  >

            </Image>
        </Grid>
        <StackPanel x:Name="_stack" Orientation="Horizontal"   Margin="10,10,10,10" Grid.Row="1"   VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Red" />
        <Label Content=": Status" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top"/>
        <Label Name="statusLabel" Content="Creating..." HorizontalAlignment="Right" Margin="0,30,10,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>


    </Grid>
</Window>
